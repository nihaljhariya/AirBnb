<% layout("/layouts/boilerplate")-%>

    <div class="row mt-3">
     <div class="col-8 offset-2">
       
    <h2>Create a New Listing</h2>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input name="listing[title]"  
            placeholder="Enter a catchy Title" 
            type="text" 
            class="form-control"
            required
            > 
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter Title First</div>
        </div>

       <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea 
            name="listing[description]"   
            class="form-control"
            required
            ></textarea>
            <div class="invalid-feedback">Add a Short Desc.</div>
            <!-- <div class="valid-feedback">Looks good!</div> -->
       </div>
        
      
        <div class="mb-3">
            <lable for="image" class="form-label">Upload Listing Image</lable>
            <input name="listing[image]" type="file"  class="form-control" >
            required
            <!-- <div class="valid-feedback">Wow!!</div> -->
         </div>
        
      <div class="row">

        <div class="mb-3 col-md-4">
            <lable for="Price" class="form-label">Price</lable>
            <input name="listing[price]"  placeholder="Sample : 1200" type="text"  class="form-control" required>
            <div class="invalid-feedback">Price should valid!!</div>
        </div>
        <div class="mb-3 col-md-8">
            <lable for="country" class="form-label">Country</lable>
            <input name="listing[country]"  placeholder="India" type="text"  class="form-control" required>
            <div class="invalid-feedback">Country should valid!!</div>
        </div>

      </div>
       
        <div class="mb-3">
            <lable for="location" class="form-label">Location</lable>
            <input name="listing[location]"  placeholder="Jaipur , Rajasthan" type="text"  class="form-control" required>
            <div class="invalid-feedback">Location should valid!!</div>
            <div>
       
        <button class="btn btn-dark add-btn mt-3">Add</button>
    </form>
</div>
</div>
